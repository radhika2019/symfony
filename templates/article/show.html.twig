{% extends 'base.html.twig' %}
{% block title %}Read: {{ article.title }}{% endblock %}
{% block body %}

<div class="row">
    <div class="col-md-12">
        <h1>{{ article.title }}</h1>
         <span class="pl-2 article-details"> <span class="js-like-article-count">5</span><a href="{{ path('article_toggle_heart', {slug: article.slug}) }}" class="fa fa-heart-o like-article js-like-article"></a> </span>
       {{ article.content|markdown }}
    </div>
    <div class="col-md-12">
        <h2>Comments ({{ comments|length }})</h2>
        <ul>
        {% for comment in comments %}
        <li>{{ comment }}</li>
        {% endfor %}
        </ul>
    </div> 
</div>
{% endblock %}
{% block javascripts %}
  {{ parent() }}
     <script src="{{ asset('js/article_show.js') }}"></script>
{% endblock %}
